@page "/Team"
@rendermode @(new InteractiveServerRenderMode(prerender: false))

<h3>Meet Our Team</h3>
<p>Our team of skilled professionals is dedicated to providing top-quality service for all your automotive needs.</p>

<div class="container">
    <div class="row">
        @foreach (var member in teamMembers)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="@member.photoUrl" class="card-img-top" alt="Photo of @member.Name">
                    <div class="card-body">
                        <h5 class="card-title">@member.Name</h5>
                        <p class="card-text"><strong>Role:</strong> @member.Role</p>
                        <p class="card-text"><strong>Specialization:</strong> @member.Specialization</p>
                        <p class="card-text"><strong>Competencies:</strong> @string.Join(", ", member.Competencies)</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

